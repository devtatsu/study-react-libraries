{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"newLine": "lf",
		"pretty": true,
		"outDir": "./build",
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"rootDir": "./src",
		"sourceMap": true,
	},
	"include": [
		"src/*"
	],
	"exclude": [
		"src/test*"
	]
}